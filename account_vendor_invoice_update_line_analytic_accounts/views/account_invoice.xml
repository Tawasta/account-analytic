<?xml version="1.0"?>
<odoo>
    <record id="account_invoice_view_form" model="ir.ui.view">
        <field name="name">account.invoice.view.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
            <field name="date_due" position="after">
                <field name="analytic_account_id" options="{ 'no_create': 1 }"/>
                <label string=" " for="set_line_analytic_accounts"/>
                <button name="set_line_analytic_accounts"
                      type="object"
                      string="Set accounts for invoice lines"
                      class="oe_edit_only oe_right oe_link"
                      attrs="{ 'invisible': [('state', 'not in', ['draft'])] }"/>                
            </field>
        </field>
    </record>
</odoo>
